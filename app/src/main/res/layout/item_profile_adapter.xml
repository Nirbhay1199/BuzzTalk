<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border_for_post_text"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:backgroundTint="@color/matt_black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/createdAt_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/postOptionMenuFragment"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:textColor="@color/white_90"
            android:textSize="13sp"
            tools:ignore="RtlSymmetry"
            tools:text="12/23/2001"
            />

        <ImageView
            android:id="@+id/postOptionMenuFragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/more_btn"
            android:backgroundTint="@color/white_1"
            android:background="@drawable/ic_baseline_more_vert_24"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/post_text_background"
        >

        <TextView
            android:id="@+id/postText_Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white_1"
            android:textSize="16sp"
            tools:text="Hyy, Ramesh Gutka here, Bolo zuban kesari" />

        <ImageView
            android:id="@+id/postImage_Profile"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:contentDescription="@string/post"
            android:padding="1dp"
            tools:ignore="ImageContrastCheck"
            android:src="@drawable/galler_image_bg_24"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <ToggleButton
                android:id="@+id/likeBtn_Profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/like_toggle_selector"
                android:text="@string/space"
                android:textOff=""
                android:textOn=""
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/likeCount_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="3dp"
                android:textColor="@color/white_1"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="24 likes" />

        </LinearLayout>

</LinearLayout>