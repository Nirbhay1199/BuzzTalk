<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border_for_post_text"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/createdAt_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/postOptionMenuFragment"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:textColor="#D8CBCB"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry"
            tools:text="12/23/2001"
            />

        <ImageView
            android:id="@+id/postOptionMenuFragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/more_btn"
            android:src="@drawable/ic_baseline_more_vert_24"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/postText_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:paddingStart="4dp"
            android:singleLine="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/post_text_background"
            tools:ignore="RtlSymmetry"
            tools:text="Hyy, Ramesh Gutka here, Bolo zuban kesari" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            tools:ignore="UseCompoundDrawables">

            <ToggleButton
                android:id="@+id/likeBtn_Profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/like_toggle_selector"
                android:textOff=""
                android:textOn=""
                android:text="@string/space"
               />

            <TextView
                android:id="@+id/likeCount_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="3dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="24 likes" />
        </LinearLayout>
</LinearLayout>